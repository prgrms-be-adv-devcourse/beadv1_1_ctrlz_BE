<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <property name="CONSOLE_LOG_PATTERN" value="%clr(%d{${LOG_DATEFORMAT_PATTERN:-yyyy-MM-dd HH:mm:ss.SSS}}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %clr([%X{userId:-ANONYMOUS}]){yellow} %clr([%X{api:-NO_API}]){blue} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- log 저장 paths -->
    <property name="LOG_PATH" value="${LOG_PATH:-logs}"/>
    <property name="SYSTEM_LOG_FILE" value="${LOG_PATH}/system.log"/>
    <property name="API_LOG_FILE" value="${LOG_PATH}/api.log"/>
    <property name="INFO_LOG_FILE" value="${LOG_PATH}/application-info.log"/>
    <property name="WARN_LOG_FILE" value="${LOG_PATH}/application-warn.log"/>
    <property name="ERROR_LOG_FILE" value="${LOG_PATH}/application-error.log"/>

    <!-- appender 첨부 -->
    <!-- appender 첨부 -->
    <include resource="appender-system.xml"/>
    <include resource="appender-api.xml"/>
    <include resource="appender-info.xml"/>
    <include resource="appender-warn.xml"/>
    <include resource="appender-error.xml"/>

    <!-- 콘솔 로그 및 시스템 로그 -->
    <root level="INFO">
        <springProfile name="!prod">
            <appender-ref ref="CONSOLE"/>
        </springProfile>
        <appender-ref ref="SYSTEM_FILE"/>
    </root>

    <!-- 운영 환경 로그 -->
    <!-- additivity = false : 로그를 부모에게 전파하지 않음 -> 중복 로그 방지 -->
    <!-- API 로그 (별도 파일 저장) -->
    <logger name="API" level="INFO" additivity="false">
        <springProfile name="!prod">
            <appender-ref ref="CONSOLE"/>
        </springProfile>
        <appender-ref ref="API_FILE"/>
    </logger>

    <!-- 운영 환경 로그 -->
    <!-- additivity = false : 로그를 부모에게 전파하지 않음 -> 중복 로그 방지 -->
    <logger name="com" level="INFO" additivity="false">
        <springProfile name="!prod">
            <appender-ref ref="CONSOLE"/>
        </springProfile>
        <appender-ref ref="INFO_FILE"/>
        <appender-ref ref="WARN_FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </logger>
</configuration>
